# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           active_variants 1.1

# as of version 1.11.4 requires C++11 to build

PortGroup           cxx11 1.0

name                cairomm
version             1.12.0
categories          graphics
license             LGPL-2+
maintainers         {devans @dbevans} openmaintainer
description         Cairo is a vector graphics library with cross-device output support.
long_description    Cairo is designed to produce identical \
                    output on all output media while taking advantage of \
                    display hardware acceleration when available \
                    (eg. through the X Render Extension).
homepage            http://cairographics.org/
master_sites        ${homepage}releases/
platforms           darwin

checksums           rmd160  551be5f23cf694597aa6af8d1c60644d19cf13a9 \
                    sha256  50435aec6fdd976934b791e808993160113ad19ca53a5634a9b64ccbe55874cc

depends_build       port:pkgconfig \
                    port:mm-common

depends_lib         path:lib/pkgconfig/cairo.pc:cairo \
                    port:libsigcxx2

use_autoreconf      yes
autoreconf.args     -fvi

#
# dummy variants to ensure that this port gets rebuilt if
# the corresponding variants for cairo change
#

variant x11 {}
variant quartz {}
default_variants +x11

if {[variant_isset quartz]} {
    require_active_variants path:lib/pkgconfig/cairo.pc:cairo quartz
} 

if {[variant_isset x11]} {
    require_active_variants path:lib/pkgconfig/cairo.pc:cairo x11
}

livecheck.type      regex
livecheck.url       http://cairographics.org/releases/
livecheck.regex     ${name}-(\[0-9\]+\\.\[0-9\]*\\.\[0-9\]+)
