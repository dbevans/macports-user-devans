# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

# as of version 2.45.31 requires C++11 to build

PortGroup           cxx11 1.0

name                glibmm
version             2.50.0
set branch          [join [lrange [split ${version} .] 0 1] .]
description         C++ interface to glib
long_description    ${description}
maintainers         {devans @dbevans} openmaintainer
categories          devel x11
platforms           darwin
license             LGPL-2.1+
homepage            http://www.gtkmm.org/
master_sites        gnome:sources/${name}/${branch}/

use_xz              yes

checksums           rmd160  2ec6129cc1b80a9633d6c558f7cfafe219b03cbf \
                    sha256  df726e3c6ef42b7621474b03b644a2e40ec4eef94a1c5a932c1e740a78f95e94

depends_build       port:pkgconfig

depends_lib         path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:libsigcxx2

# glibmm uses thread_local as of version 2.47.3.1
# Apple clang < 800 does not support this
# open source clang does
# https://devforums.apple.com/message/1079348#1079348

compiler.fallback-append mp-clang-3.8
compiler.blacklist-append {clang < 800} mp-clang-3.4 mp-clang-3.3

configure.perl      /usr/bin/perl

post-destroot {
    set mmdoctooldir ${prefix}/share/glibmm-2.4/doctool
    xinstall -d ${destroot}${mmdoctooldir}
    xinstall -m 0644 -W ${worksrcpath}/docs doc-install.pl doc-postprocess.pl \
                                            doxygen-extra.css tagfile-to-devhelp2.xsl \
                                            ${destroot}${mmdoctooldir}
}

livecheck.type      gnome-with-unstable
