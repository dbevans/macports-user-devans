depends_lib         path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    port:lib/pkgconfig/dbus-1.pc:dbus \
                    port:dbus-glib \
                    port:dbus-python27 \
                    port:atk \
                    port:at-spi2-core

