# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:filetype=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem          1.0

name                adwaita-icon-theme
version             3.15.90
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          gnome
maintainers         devans openmaintainer
license             LGPL-3
platforms           darwin
description         Adwaita icon theme

long_description    Fullcolor, symbolic and cursor assets for the $description. Previously \
                    part of gnome-themes-standard

homepage            http://www.gnome.org/
master_sites        gnome:sources/$name/$branch/

use_xz              yes

checksums           rmd160  891195e541fbc96aa5a582cdb45bc82d0134a3e9 \
                    sha256  8293aa7f9937cbc7c95ab64a18dc6f89ca4fadb821bdc2c00c91878040db6789

depends_build       port:pkgconfig \
                    port:intltool \
                    port:icon-naming-utils \
                    port:git

depends_lib         port:gtk3 \
                    port:librsvg

patchfiles          patch-configure.ac.diff

# update m4/intltool.m4 and autoreconf

pre-configure {
    copy -force ${prefix}/share/aclocal/intltool.m4 ${worksrcpath}/m4
}

use_autoreconf      yes
autoreconf.args     -fvi

use_parallel_build  no

pre-activate {
    if {![catch {set installed [lindex [registry_active gnome-themes-standard] 0]}]} {
        set _version [lindex $installed 1]
        if {[vercmp $_version 3.13.0] < 0} {
            registry_deactivate_composite gnome-themes-standard "" [list ports_nodepcheck 1]
        }
    }
}

livecheck.type      gnome-with-unstable
