# $Id$

PortSystem      1.0

name            gnome-user-docs
version         3.13.91
set branch      [join [lrange [split ${version} .] 0 1] .]
description     End-user documentation for GNOME3
long_description \
                This package contains documents targetted \
                for end-users of GNOME. See notes for a list \
                of documents provided.

maintainers     nomaintainer
categories      gnome
license         GFDL-1.1
installs_libs   no
platforms       darwin
supported_archs noarch
homepage        http://www.gnome.org/
master_sites    gnome:sources/${name}/${branch}/

use_xz          yes

checksums       sha256  0fdc5c95a9babfedf5091efd60376650f59b7dcc1cba7fdc90cd72188edea0bc \
                rmd160  94f2cb8f4fa3489dea97f1c93964abd34c2683d4

depends_build   port:pkgconfig \
                port:libxml2 \
                port:itstool

notes "
This port provides the following documents:
    - GNOME Desktop System Administration Guide (yelp help:system-admin-guide)
    - GNOME Help (yelp help:gnome-help)
"

livecheck.type  gnome-with-unstable
