# $Id$

PortSystem      1.0

name            gnome-themes-standard
conflicts       gnome-themes
version         3.13.90
set branch      [join [lrange [split ${version} .] 0 1] .]
categories      gnome
maintainers     devans openmaintainer
license         LGPL-2.1+ GPL-2+
platforms       darwin
description     Default GNOME 3 theme

long_description \
                gnome-themes-standard contains various components of the \
                default GNOME 3 themes for GTK+ 2 and GTK+ 3 applications \
                (Adwaita, HighContrast, LowContrast).

homepage        http://www.gnome.org/
master_sites    gnome:sources/$name/$branch/

use_xz          yes

checksums       rmd160  9a3a9c0c9d4c8d9fdc505737ee0f9ea32af54ff8 \
                sha256  76bfbf25cdd6f86fdbf15b085c5bcfbe0abf4715510a917ec023a4d780fb5f53

depends_build   port:intltool \
                port:pkgconfig

depends_lib     port:gtk3 \
                port:gtk2 \
                port:librsvg \
                port:adwaita-icon-theme \
                port:gnome-backgrounds

# update m4/intltool.m4 and autoreconf

pre-configure {
    copy -force ${prefix}/share/aclocal/intltool.m4 ${worksrcpath}/m4
}

use_autoreconf  yes
autoreconf.args -fvi

configure.args  --disable-silent-rules

livecheck.type  gnome-with-unstable
