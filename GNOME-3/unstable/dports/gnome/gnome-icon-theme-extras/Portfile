# $Id$

PortSystem      1.0

name            gnome-icon-theme-extras
version         3.11.2
set branch      [join [lrange [split ${version} .] 0 1] .]
maintainers     nomaintainer
categories      gnome
platforms       darwin
license         Attribution-ShareAlike-3.0
description     Extra icons for the GNOME desktop.

long_description \
                ${description}

homepage        http://www.gnome.org/
master_sites    gnome:sources/${name}/${branch}/

use_xz          yes

checksums       rmd160  eb8d89bd2724491c330ff05b260ca909613c2d78 \
                sha256  bda75e6c82768613423190d1e86c0eb783415ebf34d1f3b41013bb0139d873df

depends_build   port:intltool \
                port:pkgconfig \
                port:icon-naming-utils \
                port:gtk3
    
supported_archs noarch

configure.env-append \
                GTK_UPDATE_ICON_CACHE=${prefix}/bin/gtk-update-icon-cache-3.0

configure.args  --enable-icon-mapping

livecheck.type  gnome-with-unstable
