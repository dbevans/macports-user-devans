# $Id$

PortSystem      1.0

name            yelp-xsl
version         3.11.4
license         GPL-2 LGPL-2.1
set branch      [join [lrange [split ${version} .] 0 1] .]
description     A collection of XSLT and other data files required by Yelp.
long_description \
                yelp-xsl contains various XSLT files for transforming DocBook, Mallard, \
                and other formats as required by Yelp.
maintainers     devans openmaintainer
categories      gnome
platforms       darwin
homepage        https://wiki.gnome.org/Apps/Yelp
master_sites    gnome:sources/${name}/${branch}/

use_xz          yes

checksums       rmd160  f7ae60c09ff5830f3fbdca5c601e1c8f10c33e7a \
                sha256  e85e67fcc3edec4c34e7edc601fe3c9bd5096de1b91f288e27af6fb663732b36

depends_build   port:pkgconfig \
                port:intltool \
                port:itstool

depends_lib     port:gtk3 \
                port:libxslt \
                port:libxml2

post-activate   {
    system "${prefix}/bin/gtk-update-icon-cache-3.0 -f -t ${prefix}/share/icons/hicolor"
}

livecheck.type  gnome-with-unstable
