# $Id$

PortSystem          1.0

# as of version 3.17.1 requires C++11 to build

PortGroup           cxx11 1.0

name                gtksourceviewmm3
set gname           gtksourceviewmm
version             3.21.2
license             LGPL-2+
set branch          [join [lrange [split ${version} .] 0 1] .]

description         A C++ binding for GtkSourceView3
long_description    gtksourceviewmm3 is a C++ wrapper for the GtkSourceView3 widget library.

maintainers         devans openmaintainer
categories          gnome
platforms           darwin
 
homepage            http://projects.gnome.org/gtksourceviewmm/
master_sites        gnome:sources/${gname}/${branch}/

distname            ${gname}-${version}

use_xz              yes

checksums           rmd160  a0cedeefea6ef90184ccf6c79f1b6dc260ee037f \
                    sha256  d21296d8624a1046841bfec082021b7b966df0b62e19ee300828519bc54dd9c6

depends_build       port:pkgconfig

depends_lib         port:gtkmm3 \
                    port:gtksourceview3

livecheck.type      gnome-with-unstable
livecheck.name      ${gname}
