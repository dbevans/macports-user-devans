PortSystem          1.0

# as of version 1.90.10 requires C++11 to build

PortGroup           cxx11 1.0

name                goocanvasmm2
set gname           goocanvasmm
version             1.90.10
license             LGPL-2.1
set branch          [join [lrange [split ${version} .] 0 1] .]
description         C++ wrappers for goocanvas2
long_description    ${description}
maintainers         devans openmaintainer
categories          gnome devel
platforms           darwin
homepage            https://wiki.gnome.org/Projects/GooCanvas
master_sites        gnome:sources/${gname}/${branch}/

distname            ${gname}-${version}
use_xz              yes

checksums           rmd160  b6bb6098b700d0c9181b5c0a67a8debdd8c6d0ab \
                    sha256  45bb5c8822c08a156383fd5d3bf15722a29a17f67c11096d53380400391200a4

depends_build       port:pkgconfig

depends_lib         port:gtkmm3 \
                    port:goocanvas2

livecheck.type      gnome-with-unstable
livecheck.name      ${gname}
