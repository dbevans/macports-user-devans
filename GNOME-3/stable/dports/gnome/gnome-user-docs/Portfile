PortSystem      1.0

name            gnome-user-docs
version         3.8.2
set branch      [join [lrange [split ${version} .] 0 1] .]
description     End-user documentation for GNOME2
long_description \
                This package contains documents which will be \
                packaged together and shipped as gnome-user-docs \
                in the core GNOME distribution. They should be \
                documents targetted for end-users of GNOME.
maintainers     nomaintainer
categories      gnome
license         GFDL-1.1
installs_libs   no
platforms       darwin
supported_archs noarch
homepage        http://www.gnome.org/
master_sites    gnome:sources/${name}/${branch}/

use_xz          yes

checksums       sha256  eeb96fcd0c253ce9869fe2007402220f2924fa37217c6fac357db236797cadb7 \
                rmd160  41d5cbeedb6f26e3d78443431c8615b2e3e51bd1

depends_build   port:pkgconfig \
                port:libxml2 \
                port:itstool

livecheck.type  gnome
