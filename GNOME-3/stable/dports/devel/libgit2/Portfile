PortSystem          1.0
PortGroup           github 1.0
PortGroup           cmake 1.0

github.setup        libgit2 libgit2 0.21.0-rc2 v
categories          devel
platforms           darwin
maintainers         gmail.com:juanrgar devans openmaintainer
license             GPL-2

description         A portable, pure C implementation of the Git core methods

long_description    libgit2 is a portable, pure C implementation of the \
                    Git core methods provided as a re-entrant linkable \
                    library with a solid API, allowing you to write native \
                    speed custom Git applications in any language which \
                    supports C bindings.

homepage            http://libgit2.github.com/

checksums           rmd160  6f96adc93f2d91a8a2ebadd9632379f17b4220aa \
                    sha256  bb4ef3db098dd09c5d64ab7943d20faca6a5052c55931fd69d343914b3822767

depends_lib         port:libiconv \
                    port:libssh2 \
                    port:openssl \
                    port:zlib

configure.dir       ${workpath}/build
build.dir           ${configure.dir}

patchfiles          patch-strnlen-posix.h.diff

post-extract {
    file mkdir ${configure.dir}
}

configure.post_args ../${distname}
