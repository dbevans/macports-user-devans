PortSystem          1.0

name                libgee
version             0.13.91
license             LGPL-2.1+
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          devel
maintainers         nomaintainer
description         Collection library providing GObject-based interfaces

long_description    Libgee is a collection library providing GObject-based interfaces and \
                    classes for commonly used data structures.

platforms           darwin

homepage            https://wiki.gnome.org/Projects/Libgee
master_sites        gnome:sources/${name}/${branch}

use_xz              yes

checksums           rmd160  df563fee579eaf30c4ed636376602a2af7fdf516 \
                    sha256  56a9f6bd203e68cfc203b97632e9659d3dff70d9ff2b6fd275722ca13c384a5b

depends_build       port:pkgconfig \
                    port:vala

depends_lib         port:gobject-introspection

configure.args      --enable-introspection=yes

livecheck.type      gnome-with-unstable
