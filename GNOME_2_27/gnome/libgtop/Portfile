# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem 1.0

name		libgtop
version		2.27.3
set branch      [join [lrange [split ${version} .] 0 1] .]
description	A library for gtop2
long_description \
		This is library for the gtop2, the GNOME 2.0 \
		version of top command. The top command is a tool \
		to display and update information about the top \
		cpu processes.
maintainers	devans openmaintainer
categories	gnome
platforms	darwin
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/${branch}/

checksums       md5     e708331726d41f42367eeecd86139fa8 \
                sha1    8f04bd003e0ff8da2ed78708ccdf8e6bde150448 \
                rmd160  5c4aa8f2c9b7411f1bfa109d845a1a03c02298c0

depends_build   port:pkgconfig \
                port:p5-xml-parser \
                port:gtk-doc

depends_lib     path:lib/pkgconfig/glib-2.0.pc:glib2

use_bzip2 	yes

configure.args	--mandir=${prefix}/share/man \
                --infodir=${prefix}/share/info \
                --x-includes=${prefix}/include \
                --x-libraries=${prefix}/lib

livecheck.check regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
