# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4
# $Id$

PortSystem 1.0

name		gnome-utils
version		2.27.2
set branch      [join [lrange [split ${version} .] 0 1] .]
description	GNOME utilities
long_description Utilities for the GNOME 2.0 desktop.
maintainers	devans openmaintainer
categories	gnome
platforms	darwin
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/${branch}/

checksums       md5     b7ee7d23f2713334c68ebf5121186219 \
                sha1    14a227c7d4d3c58eba2ddce1892c150699c1cdab \
                rmd160  d20f296a316547772271efc14855e2d0798791b5

depends_lib     port:gconf \
                port:libgtop \
                port:gnome-panel

use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man \
		--x-includes=${prefix}/include \
                --x-libraries=${prefix}/lib \
                --disable-shave \
                --enable-maintainer-flags=no \
                --disable-schemas-install \
                --disable-scrollkeeper

post-extract {
	reinplace "s|-export-dynamic||g" ${worksrcpath}/gnome-screenshot/Makefile.in
}

post-activate	{
	system "scrollkeeper-update"
        system "export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source` && \
            gconftool-2 --makefile-install-rule ${prefix}/etc/gconf/schemas/*.schemas"
}

platform darwin 7 {
	depends_lib-append lib:libgnuregex:gnuregex
	post-patch {
		reinplace "s|gnuregex.h|regex.h|g" ${worksrcpath}/gsearchtool/gsearchtool-support.c
	}
}

livecheck.check regex
livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
livecheck.regex {LATEST-IS-(\d+(?:\.\d+)*)}
